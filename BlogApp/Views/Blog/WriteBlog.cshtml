@{
}

<form  asp-action="WriteBlog" method="post">
  <div class="form-group">
    <label asp-for="Blog.BlogTitle">Blog Title</label>
    <input type="email" class="form-control" asp-for="Blog.BlogTitle">
  </div>
  <div class="form-group">
    <label asp-for="Blog.BlogContent">Example textarea</label>
    <textarea class="form-control" asp-for="Blog.BlogContent" rows="3"></textarea>
  </div>
   <div class="form-group">
    <label asp-for="Category.CategoryName">Category</label>
    <select class="form-control" asp-for="Category.CategoryName">
            @foreach(var category in Model.Categories)
            {
                <option>@category.CategoryName</option>
            }
    </select>
  </div>
  <div class="form-group">
  <button type="submit" class="btn btn-primary">Submit</button>
  </div>
</form>